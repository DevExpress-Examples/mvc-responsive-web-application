@model MvcResponsiveWebApplication.Model.SchedulerDataSource

@{
    var scheduler = Html.DevExpress().Scheduler(MvcResponsiveWebApplication.Model.SchedulerHelper.Settings);
    if(ViewBag.GeneralError != null) {
        scheduler.SetErrorText(ViewBag.GeneralError);
    }
}
@scheduler.Bind(Model.Appointments, Model.Resources).GetHtml()